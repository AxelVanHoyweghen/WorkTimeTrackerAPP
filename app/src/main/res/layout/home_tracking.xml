<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Welcome WTTuser"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.worktimetrackerapp.util.AnalogClock
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />


    <TextView
        android:id="@+id/numHoursJobTxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/accumulatingWageTxtVW"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="Hours"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/accumulatingWageTxtVW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hoursToGoTxtVW"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Wage Earned"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/hoursToGoTxtVW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jobDoneBtn"
        android:layout_alignStart="@+id/accumulatingWageTxtVW"
        android:layout_marginBottom="21dp"
        android:text="Hours To Go"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/jobDoneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="Done" />

</RelativeLayout>