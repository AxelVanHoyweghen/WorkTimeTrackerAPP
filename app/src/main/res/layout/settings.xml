<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/settings_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/settings_page"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/FrameLayoutSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/settings_page">

        <ListView
            android:id="@+id/settings_job_list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/no_jobs_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_jobs_available"
            android:textSize="18sp" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settings_add_jobs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white" />
    </FrameLayout>



</RelativeLayout>